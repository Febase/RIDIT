{
  "version": "0.0.0",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": ["activeTab", "bookmarks", "tabs"],
  "chrome_url_overrides": {
    "newtab": "window.html"
  },
  "browser_action": {
    "default_title": "RIDIT | Bookmark Manager",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.bundle.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["js/content.bundle.js"]
    }
  ]
}
